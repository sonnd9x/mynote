@model MyNotes.Entity.tbl_User
@{
     Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>My Notes - Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
</head>
<body>
    <div class="wrapper">
        @using (Html.BeginForm("DangNhap", "Login", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-signin" }))
        {
            <h2 class="form-signin-heading">My Notes</h2>
            <div class="form-group">
                @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Username", required = "", autofocus = "" })
            </div>
            <div class="form-group">
                @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Password", required = "" })
            </div>
            <span class="help-block">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            </span>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
        }
    </div>
</body>
</html>
