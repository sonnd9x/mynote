<div class="row">
    <div class="col-xs-12">
        @foreach (var item in Model)
        {
            <div class="list-group recent">
                <a href="~/@item.ID" class="list-group-item">
                    <h5 class="list-group-item-heading">@item.Name</h5>
                    <small class="list-group-item-text">@item.CreateDate.Value.ToShortDateString()</small>
                </a>
            </div>
        }
        <div>
            @Html.PagedListPager(Model, page => Url.Action("Recent", new { page, @s = @ViewBag.Search }))
        </div>
    </div>
</div>

